@model IEnumerable<MovieItemViewModel>

@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <table>
        <tr>
            <th>Title</th>
            <th>Price</th>
        </tr>
        @foreach (MovieItemViewModel item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Price</td>
            </tr>
        }
    </table>
   

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
